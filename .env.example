# Discord Bot Configuration
# Get these from https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_bot_token_here
CLIENT_ID=your_bot_client_id_here

# Your personal Discord user ID (for auto-join feature)
# Enable Developer Mode in Discord settings, then right-click your username to copy ID
YOUR_USER_ID=your_discord_user_id_here

# Server Configuration
PORT=3000

# Optional: Spotify Integration (if implementing real Spotify)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Optional: Database (if adding database features)
DATABASE_URL=your_database_url_here

# Optional: Logging
LOG_LEVEL=info