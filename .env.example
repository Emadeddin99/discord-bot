# ========================================
# DISCORD BOT CONFIGURATION
# ========================================

# Required: Bot Token from Discord Developer Portal
DISCORD_BOT_TOKEN=your_bot_token_here

# Required: Application Client ID from Discord Developer Portal
CLIENT_ID=your_application_client_id_here

# Optional: For testing commands in specific server
GUILD_ID=your_test_server_id_here

# Optional: Your personal Discord user ID for auto-join features
YOUR_USER_ID=your_discord_user_id_here

# ========================================
# SERVER CONFIGURATION
# ========================================

# Port for health check server (default: 3000)
PORT=3000

# ========================================
# LEVELING SYSTEM CONFIGURATION
# ========================================

# Role IDs for leveling (replace with your actual role IDs)
ROLE_NEW=role_id_for_new_members
ROLE_MEMBER=role_id_for_members  
ROLE_SHADOW=role_id_for_shadows

# Leveling thresholds
LEVEL_THRESHOLD_MEMBER=10    # Level needed for Member role
LEVEL_THRESHOLD_SHADOW=25    # Level needed for Shadow role

# ========================================
# ADVANCED CONFIGURATION
# ========================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Auto-moderation settings
MAX_WARNINGS=5
MUTE_DURATION_MINUTES=10

